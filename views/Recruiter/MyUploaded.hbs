{{#if login}}
{{#if user.isRecruiter}}
<div class="row">
	<div class="col s12">
		{{#if length}}
		<div class="title2" style="margin-top: 30px;">
			Your all the posted jobs are listed here
		</div>
		<div class="row" style="margin-top: 40px;">
			{{#each job}}
			<div class="col s12 l4">
				<div class="innerBox card grey lighten-4 z-depth-1">
					<div class="card-title">
						{{this.jobTitle}}
					</div>
					<div style="margin-top: 10px; font-size: 1.2em; font-weight: 600;">
						{{this.companyName}}
					</div>
					<div class="card-content" style="margin-top: 10px;">
						<div>
							<div>
								<i class="material-icons left">location_on</i>{{this.jobLocation}}
							</div>
							<div style="margin-top: 10px;">
								<i class="material-icons left">business_center</i>{{this.jobType}}
							</div>
							<div style="margin-top: 10px;">
								<i class="material-icons left">sports_handball
								</i>{{this.skill}}
							</div>
							<div style="margin-top: 10px;">
								Vacancy Avaliable {{this.numberOfAvaliableVacancy}} | <span>
									Offered Salary â‚¹ {{this.salaryStart}} /-
								</span>
							</div>
							<div style="margin-top: 10px;">
								Minimum experience {{this.minimumExperience}} Yr.
							</div>
						</div>
					</div>
					<div class="card-action">
						<div class="row">
							<div class="col s6 center">
								<form action="/delete-job/{{this.id}}" method="POST">
									<button type="submit" class="btn red" style="font-weight: 700;">
										<i class="material-icons">delete</i>
									</button>
								</form>
							</div>
							<div class="col s6 center">
								<a href="/update-job-details/{{this.id}}" class="btn green"
									style="font-weight: 700;">
									<i class="material-icons">edit</i>
								</a>
							</div>
						</div>

					</div>
				</div>
			</div>
			{{/each}}
		</div>
		{{else}}
		<div class="title2">
			No Jobs Are Uploaded by you
		</div>
		<div class="center" style="font-size: 1.2em; font-weight: 600;">
			<a href="/upload-new-job">Start uploading...</a>
		</div>
		{{/if}}
	</div>
</div>

{{else}}
<div class="title" style="margin-top: 50px; margin-bottom: 50px">
	<span class="red-text">
		401
	</span>
	<div class="">
		Access Denied !!!
	</div>
</div>
{{/if}}
{{/if}}